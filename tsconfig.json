{
  "extends": "./src/.umi/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true // 不校验依赖库
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "vitest.config.ts",
    "typings.d.ts",
    "test/**/*",
    "commitlint.config.js"
  ],
  "exclude": [
    "mock/**/*",
    "node_modules",
    "scripts/",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "docs",
    "tests",
    "build"
  ]
}
